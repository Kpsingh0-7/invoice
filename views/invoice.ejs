<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice Details</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 30;
      padding: 0;
      background-color: #ffffff;
    }
    .container {
  width: 210mm;
  height: 100%;
  background: #fff;
  padding: 20px;
  overflow: hidden;
  page-break-before: always; /* Ensures that content on a new page starts from a new page when printing */
}

    h1, h2, h3 {
      color: #363636;
    }
    h1 {
      text-align: center;
      font-size: 24px;
      border-bottom: 2px solid #008080;
      padding: 5px 20px;
      margin: 0;
    }
    h2 {
      font-size: 24px;
      border-bottom: 2px solid #008080;
      padding: 5px 20px;
      margin: 0 0 20px;
    }
    h3 {
      font-size: 18px;
      margin-bottom: 10px;
    }
    p {
      font-size: 14px;
      margin: 5px 0;
    }
    .flex {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
    }
    .flex .left-section, .flex .right-section {
      width: 49%;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    table th, table td {
      border: 1px solid #ccc;
      padding: 5px 8px;
      text-align: left;
    }
    table th {
      background-color: #666;
      color: #fff;
    }
    .summary-table {
      width: 35%;
      margin-top: 0;
      float: right;
    }
    .summary-table td {
      font-size: 16px;
      padding: 5px;
      border: 1px solid #ddd;
    }
    .summary-table .bold {
      font-weight: bold;
      color: #008080;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Invoice Details</h1>
    <div class="flex">
      <div class="left-section">
        <h3>Invoice From</h3>
        <% if (invoice.order_id) { %><p>Invoice No: <%= invoice.order_id %></p><% } %>
        <% if (invoice.order && invoice.order.shop_name) { %>
          <p>Restaurant Name: <%= invoice.order.shop_name %></p>
        <% } else { %>
          <p>Restaurant Name: N/A</p>
        <% } %>
        <% if (invoice.order && invoice.order.shop_address) { %>
          <p>Address: <%= invoice.order.shop_address %></p>
        <% } %>
        <% if (invoice.order && invoice.order.shop_email) { %>
          <p>Email: <%= invoice.order.shop_email %></p>
        <% } %>
        <% if (invoice.order && invoice.order.tax_reg_no) { %>
          <p>GST: <%= invoice.order.tax_reg_no %></p>
        <% } %>
      </div>
      <div class="right-section">
        <h3>Invoice To</h3>
        <% if (invoice.order.user_name) { %><p>Customer Name: <%= invoice.order.user_name %></p><% } %>
        <% if (invoice.order.user_mobile) { %><p>Phone: <%= invoice.order.user_mobile %></p><% } %>
        <% if (invoice.order.delivery_method) { %><p>Delivery Method: <%= invoice.order.delivery_method %></p><% } %>
        <% if (invoice.order.user_address) { %><p>Delivered To: <%= invoice.order.user_address %></p><% } %>
        <% if (invoice.order.Order_DeliveryPickup_Time) { %><p>Ordered At: <%= invoice.order.Order_DeliveryPickup_Time %></p><% } %>
      </div>
    </div>

    <table>
      <thead>
        <tr>
          <th>Item Name</th>
          <th>Quantity</th>
          <th>Price (Rs.)</th>
          <th>Total (Rs.)</th>
        </tr>
      </thead>
      <tbody>
        <% if (invoice.items && invoice.items.length > 0) { %>
          <% invoice.items.forEach(item => { %>
            <tr>
              <td>
                <%= item.Item_Name %> &nbsp;&nbsp;&nbsp;
                <% if (item.Item_Size) { %> 
                  <small><%= item.Item_Size %></small>
                <% } %>
              
                <% if (item.Preference_Name) { %>
                  <br>
                  <small>
                    <% item.Preference_Name.split(',') // Split by commas
                      .map(option => option.split(':')[1]) // Get the value after ':'
                      .filter(value => value) // Remove undefined values
                      .forEach(function(detail) { %>
                        <%= detail.trim() %>
                    <% }); %>
                  </small>
                <% } %>
              
                <% if (item.Custom_Details) { %>
                  <br>
                  <small>
                    <% item.Custom_Details.replace(/Addon( Drinks)? ?: /g, '') // Remove 'Addon :' and 'Addon Drinks :'
                      .split(/[,|]/) // Split by comma and pipe
                      .forEach(function(detail) { %>
                        <%= detail.trim() %><br>
                    <% }); %>
                  </small>
                <% } %>
              </td>
              
              <td><%= item.Quantity %></td>
              <td><%= item.Single_Price %></td>
              <td><%= item.Amount %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center">No items available</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <table class="summary-table">
      <% if (invoice.order.amount) { %>
        <tr><td>Subtotal:</td><td style="text-align: right;">Rs. <%= invoice.order.amount %></td></tr>
      <% } %>
      <% if (invoice.order.discount) { %>
        <tr><td>Discount:</td><td style="text-align: right;">Rs. <%= invoice.order.discount %></td></tr>
      <% } %>
      <% if (invoice.taxList && invoice.taxList.length > 0) { %>
        <% invoice.taxList.forEach(tax => { %>
          <tr><td><%= tax.tax_name %>:</td><td style="text-align: right;">Rs. <%= tax.tax_amount %></td></tr>
        <% }); %>
      <% } %>
      <% if (invoice.order.charges) { %>
        <tr><td>Delivery Charges:</td><td style="text-align: right;">Rs. <%= invoice.order.charges %></td></tr>
      <% } %>
      <% if (invoice.order.payment_charges) { %>
        <tr><td>Service Charges:</td><td style="text-align: right;">Rs. <%= invoice.order.payment_charges %></td></tr>
      <% } %>
      <tr class="bold"><td>Total:</td><td style="text-align: right;">Rs. <%= invoice.order.total_amount %></td></tr>
    </table>

    <% if (invoice.order.payment_method) { %>
      <h3>Payment Method</h3>
      <p><%= invoice.order.payment_method %></p>
    <% } %>
    <% if (invoice.order.order_paid_status) { %>
      <p>
        <%= invoice.order.order_paid_status === 1 ? 'Unpaid' : invoice.order.order_paid_status === 2 ? 'Paid' : 'Unknown Status' %>
      </p>
    <% } %>
  </div>
</body>
</html>
